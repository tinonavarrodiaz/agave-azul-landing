---
interface Props {
  lang: string;
}
const { lang } = Astro.props;

import { find } from '../translate/find';
import Maps from './Maps.astro';
const text = lang === 'es' ? find.es : find.en;
---

<section class="pt-12 pb-14 md:pt-site-pt md:pb-site-pb">
  <h2 class="text-center text-2xl md:text-[3.64vw] mb-2 text-[#969696]">
    {text.title}
  </h2>
  <h3
    class="text-center text-xl md:text-[2.64vw] md:mb-[4.89vw] text-[#969696] mb-12"
  >
    {text.subTitle}
  </h3>

  <Maps />
</section>
