---
interface Props {
  lang: string;
}
const { lang } = Astro.props;

import { contact } from '../translate/contact';
import Form from './Form.astro';
import Maps from './Maps.astro';
const text = lang === 'es' ? contact.es : contact.en;
---

<section class="Contact">
  <h2
    class="Contact__title table text-[#969696] leading-[1em] text-2xl md:text-[3.645vw] text-left uppercase relative left-[100%] translate-x-[calc(-100%-1em)] md:translate-x-[calc(-100%-8.85416vw)] mb-7 md:mb-[4.583vw]"
  >
    {text.title}
    <span class="block">{text.titleSpan}</span>
  </h2>
  <h3
    class="px-6 md:pl-[6.40625vw] leading-none text-[#808080] md:text-[1.45vw] mb-7 md:mb-[2.34375vw] font-light"
  >
    {text.subTitle}
  </h3>
  <div
    class="Contact_grid pl-6 pr-6 md:pl-[9.6875vw] md:pr-[18.75vw] md:grid grid-cols-[26.82291666666667vw_1fr] grid-rows-[34.73958333333333vw] gap-x-[6.25vw]"
  >
    <img
      src="/img/san-juanito.jpg"
      alt="San Juanito de Escobedo"
      class="contact_img block w-[100%] h-[100%] object-cover object-center"
    />
    <div class="flex flex-col">
      <Form
        name={text.inputs.name}
        email={text.inputs.email}
        message={text.inputs.message}
        send={text.inputs.send}
      />
      <div class="Adresses mt-6 lg:mt-auto">
        <div class="officess">
          <h3 class="uppercase tracking-[3px] text-[#5F6D76]">
            {text.offices}
          </h3>
          <p class="text-[#5F6D76] font-light">
            Hilarion Romero Gil Nº 1033, Alcalde Barranquitas,<br />
             Guadalajara, Jalisco,<br />
             México Tel: 33 1199 0002 y 33 1199 3661
          </p>
        </div>
        <div class="distillery mt-4">
          <h3 class="uppercase tracking-[3px] text-[#5F6D76]">
            {text.distillery}
          </h3>
          <p class="text-[#5F6D76] font-light">
            Cuauhtémoc 1000 Col. Vista Hermosa, San Juanito <br />
             de Escobedo, Jal.46560 México
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
