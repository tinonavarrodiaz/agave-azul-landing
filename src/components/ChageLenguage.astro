---
interface Props {
  lang: string;
}
const { lang } = Astro.props;
---

<aside
  class="lenguage absolute w-auto h-auto top-4 right-[4.895833333333333vw] origin-center scale-90 hidden md:block"
>
  <div class="ui-switch-container">
    <label class="ui-switch flex gap-x-3">
      <span>English</span>
      {
        lang === 'es' ? (
          <input type="checkbox" id="input" checked />
        ) : (
          <input type="checkbox" id="input" />
        )
      }

      <div class="slider">
        <div class="circle"></div>
      </div>
      <span>Espa√±ol</span>
    </label>
  </div>
</aside>

<script>
  const input: any = document.getElementById('input');
  input.addEventListener('change', (e: any) => [
    e.target.checked ? (location.href = '/es') : (location.href = '/'),
  ]);
</script>
