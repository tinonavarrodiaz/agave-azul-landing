---
interface Props {
  title: string;
  lang: string;
}

import { language } from '../translate/head';
import Header from '../components/Header.astro';
import '../scss/index.scss';
const { title, lang } = Astro.props;
const currentLang = lang === 'es' ? language.es : language.en;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={currentLang.head.description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta property="og:title" content="Destiladora Agave Azul" />
    <meta property="og:description" content={currentLang.head.description} />
    <meta property="og:url" content="http://www.destiladoraagaveazul.com/" />
    <meta property="og:site_name" content="Destiladora Agave Azul" />
    <meta
      property="og:image"
      content="https://agave-azul-landing.netlify.app/img/agave.jpg"
    />
    <meta property="og:image:type" content="image/jpg" />
    <meta property="og:image:width" content="515" />
    <meta property="og:image:height" content="678" />
    <meta property="og:type" content="website" />
  </head>
  <body>
    <Header lang={lang} />
    <slot />
    <script>
      const screemWidth = Math.max(
        document.documentElement.clientWidth || 0,
        window.innerWidth || 0
      );
      const getScrollBarWidth = () =>
        window.innerWidth -
        document.documentElement.getBoundingClientRect().width;
      document.documentElement.style.setProperty(
        '--screenWidth',
        `${screemWidth}`
      );
      document.documentElement.style.setProperty(
        '--scrollbarWidth',
        `${getScrollBarWidth()}px`
      );
    </script>
  </body>
</html>
<script is:inline src="https://unpkg.com/aos@next/dist/aos.js"></script>
